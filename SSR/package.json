{
    "name": "melbourne-ride-ssr",
    "version": "1.0.0",
    "description": "A SSR Website powered by Nuxt",
    "author": "Laurence Barnes",
    "private": true,
    "scripts": {
        "fix-code": "prettier-eslint --write 'src/**/*.{js,jsx,vue}' ",
        "fix-styles": "prettier-stylelint --write 'src/**/*.{css,scss}' ",
        "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
        "build": "nuxt build",
        "start": "cross-env NODE_ENV=production node server/index.js",
        "generate": "nuxt generate",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "static": "nuxt build && nuxt export"
    },
    "lint-staged": {
        "*.{js,vue}": "eslint --cache --fix"
    },
    "engines": {
        "node": ">= 10.0.0",
        "npm": ">= 6.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@nuxt/http": "^0.5.12",
        "@nuxtjs/axios": "^5.12.2",
        "@nuxtjs/dotenv": "^1.4.1",
        "@nuxtjs/recaptcha": "^0.6.2",
        "cross-env": "^7.0.2",
        "date-fns": "^2.16.1",
        "date-fns-tz": "^1.0.10",
        "express": "^4.17.1",
        "nuxt": "^2.14.5",
        "vue-div-100vh": "^0.1.2",
        "vuetify-loader": "^1.6.0"
    },
    "devDependencies": {
        "@nuxtjs/eslint-config": "^3.1.0",
        "@nuxtjs/eslint-module": "^2.0.0",
        "@nuxtjs/google-analytics": "^2.4.0",
        "@nuxtjs/svg-sprite": "^0.4.12",
        "@nuxtjs/vuetify": "^1.11.2",
        "@vue/test-utils": "^1.1.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.3.0",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-nuxt": "^1.0.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "jest": "^26.4.2",
        "lint-staged": "^10.3.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "prettier-eslint": "^11.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "prettier-stylelint": "^0.4.2",
        "sass-loader": "^8.0.2",
        "vue-jest": "^3.0.6"
    }
}
